@model Contratistas.Models.Contratista
@{
    ViewData["Title"] = "Recuperar contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="titulo">
    <h3>Recuperar contraseña</h3>
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <form method="post" asp-action="ContrasenaNueva">
                @if (TempData["mensajesuc"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["mensajesuc"]
                    </div>
                }
                @if (TempData["mensajedan"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["mensajedan"]
                    </div>
                }

                <div class="form-group">
                    <input name="UsrMail" class="form-control" type="text" placeholder="Usuario o correo electrónico">
                </div>

                <div class="form-group">
                    <input type="submit" class="form-control btn btn-primary" value="Recibir contraseña nueva">
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .titulo {
        display: flex;
        justify-content: center;
    }

    .container {
        justify-content: center;
    }

    .form-control {
        justify-content: center;
    }

    .form-group {
        justify-content: center;
    }
</style>