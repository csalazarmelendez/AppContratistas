@model Contratistas.Models.Contratista
@{
    ViewData["Title"] = "Recuperar contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Recuperar contraseña</h3>

<div class="container">
    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="ContrasenaNueva">
                @if (TempData["mensajesuc"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["mensajesuc"]
                    </div>
                }
                @if (TempData["mensajedan"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["mensajedan"]
                    </div>
                }

                <div class="form-group">
                    <input name="UsrMail" type="text" placeholder="Usuario o correo electrónico">
                </div>

                <div class="form-group">
                    <input type="submit" value="Enviar">
                </div>
            </form>
        </div>
    </div>
</div>

